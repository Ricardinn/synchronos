{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es2020",
    "sourceMap": true,
    "outDir": "dist",
    "declaration": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*", "*.ejs"],
  "exclude": ["node_modules", "dist", ".vscode", "docs"]
}
